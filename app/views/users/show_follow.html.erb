<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4" style="position: fixed;">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "プロフィール", @user %></span>
      <span><b>投稿数:</b> <%= @user.microposts.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <h1><%= @title %></h1>
  
  <div class="col-md-8 users-pc" style="float: right;">
    <ul class="users">
      <%= render @users %>
    </ul>
    <%= paginate @users %>
  </div>
  
  <div class="col-md-8 users-sp">
    <ul class="users">
      <%= render @users %>
    </ul>
    <%= paginate @users %>
  </div>
</div>

<script>
  
  $(function() {
    $('.users-sp').jscroll({
      contentSelector: '.users-sp',
      nextSelector: 'span.next:last a',
      loadingHtml: '<i class="fa fa-spinner fa-pulse fa-7x fa-fw loading"></i>'
    });
  });
  
</script>
