<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <div>
          <%= gravatar_for @user %>
          <%= @user.name %>
        </div>
      </h1>
      <h5>
        <% if @user.introduction? %>
          <div class="introduction">
            <%= @user.introduction %>
          </div>
        <% end %>
      </h5>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>投稿数(<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
