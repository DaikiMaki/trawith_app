<% provide(:title, "users") %>
<%= search_form_for @search, url: user_search_path do |f| %>
  <div class="searchbox">
    <%= f.text_field :name_cont %>
  </div>
  <%= f.submit "検索", class: "btn btn-primary" %>
<% end %>
<h1>ユーザー一覧</h1>

<% if @search_users.any? %>
  <ol class="users">
    <%= render @search_users %>
  </ol>
  <%= will_paginate @search_users,
            params: { controller: :users, action: :search }%>
<% end %>
