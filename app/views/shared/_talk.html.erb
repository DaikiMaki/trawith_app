<% if @messages.present? %>
  <% @messages.each do |m| %>
    <% if m.user_id == current_user.id %>
      <div class="mymessage">
        <p><%= m.message %></p>
      </div>
    <% else %>
      <div class="fukidasi">
        <div class="icon">
          <%= link_to gravatar_for(m.user, size: 50), user_path(m.user) %>
        </div>
        <div class="messaging">
          <div class="says">
            <p><%= m.message %></p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
<% else %>
  <h3 class="text-center">メッセージはまだありません</h3>
<% end %>

<%= form_with(model: @message) do |f| %>
  <%= f.text_field :message, :placeholder => "メッセージを入力して下さい" , :size => 70 %>
  <%= f.hidden_field :room_id, :value => @room.id %>
  <br>
  <%= f.submit "投稿する" %>
<% end %>

