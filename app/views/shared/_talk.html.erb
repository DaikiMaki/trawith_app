<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="room-icon">
      <div class="icon">
        <% @entries.each do |e| %>
          <% unless e.user == current_user %>
          <button id="page-top"><%= gravatar_for(e.user, size: 50) %></button>
          <% end %>
        <% end %>
      </div>
    </div>
    <div id="room">
      <% if @messages.present? %>
        <%= render @messages %>
      <% else %>
        <h3>メッセージはまだありません</h3>
      <% end %>
    </div>
    <form>
      <textarea data-behavior="room_speaker" data-user_id="<%= current_user.id %>" data-room_id="<%= @room.id %>" placeholder="メッセージを入力" class="room__message-form_textarea", id="message_form"></textarea>
      <button class="btn btn-primary submit-button">送信</button>
    </form>
    </div>
  </div>
</div>

<script>
$(document).on ("turbolinks:load", function (){
  const room = document.getElementById('room');
  room.scrollTop = room.scrollHeight;
  $('#page-top').on('click', function () {
    $('#room').scrollTop(0);
  });
});
</script>


