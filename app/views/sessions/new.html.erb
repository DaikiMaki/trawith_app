<% provide(:title, "Log in") %>
<h1>ログイン</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3 login-form">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %> 
      
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: "form_control" %>
      
      <%= f.label :password, "パスワード" %>
      <%= link_to "(お忘れですか？）", new_password_reset_path %>
      <%= f.password_field :password, class: "form_control" %>
      
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>ログイン状態を維持しますか？</span>        
      <% end %>
      
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    <% end %>
    
    <p>まだ登録をしていない方は<%= link_to "こちら", signup_path %></p>
  </div>
</div>