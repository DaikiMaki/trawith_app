<% provide(:title, "notification") %>
<h1>通知</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3 notifications-pc">
    <ul class="notifications">
      <%= render @notifications %>
    </ul>
    <%= paginate @notifications %>
  </div>
  <div class="col-md-4 col-md-offset-4 notifications-sp">
    <ul class="notifications">
      <%= render @notifications %>
    </ul>
    <%= paginate @notifications %>
  </div>
</div>


<script>
    /* global $ */
  
  $(function() {
    $('.notifications-sp').jscroll({
      contentSelector: '.notifications-sp',
      nextSelector: 'span.next:last a',
      loadingHtml: '<i class="fa fa-spinner fa-pulse fa-7x fa-fw loading"></i>'
    });
  });

</script>