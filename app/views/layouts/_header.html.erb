<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "trawith", root_path, id: "logo" %>
    <nav class="pc-nav">
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Talk", rooms_path %></li>
          <% if current_user.admin? %>
            <li><%= link_to "Users", users_path %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
          <li>
            <%= link_to notifications_path do %>
              <% if unchecked_notifications.any? %>
                <i class="fas fa-bell fa-lg fa-stack-2x" style="font-size: 1.5em;"></i>
                <i class="fas fa-circle n-circle fa-stack-1x"></i>
              <% else %>
                <i class="fas fa-bell fa-lg" style="font-size: 1.5em;"></i>
              <% end %>
            <% end %>
          </li>

        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
    <nav class="sp-nav">
      <ul>
        <% if logged_in? %>
          <li><%= link_to "Profile", current_user %></li>
          <li><%= link_to "Contact", new_inquiry_path %></li>
          <% if current_user.admin? %>
            <li><%= link_to "Users", users_path %></li>
          <% end %>
          <li><%= link_to "Log out", logout_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
    <div class="btn-trigger" id="btn01">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </div>
</header>

<script>
$(function(){
  $('.btn-trigger').on('click', function() {
    $(this).toggleClass('active');
    $('.sp-nav').toggleClass('toggle');
  });
});
</script>
