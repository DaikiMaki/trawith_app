<div class="fukidasi">
  <div class="icon">
    <%= link_to gravatar_for(message.user, size: 50), user_path(message.user) %>
  </div>
  <div class="messaging">
    <p><%= message.user.name %><span><%= message.created_at.strftime("%m-%d %H:%M") %></span></p>
    <div class="says">
      <p><%=safe_join(message.message.split("\n"),tag(:br))%></p>
      <%= image_tag message.image.variant(resize_to_limit: [500, 500]) if message.image.attached? %>
    </div>
  </div>
</div>

